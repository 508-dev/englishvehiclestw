---
import Layout from '../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
const serviceEntries = await getCollection('service');
const contactInfo = await getEntry('about', 'contact');



---

<Layout title="English Services" description="Fluent English services with cars, motorcycles, and scooters in Taiwan. Includes renting, buying, selling, inspecting, repair, and maintenance.">
  <div  class="bg-gray-100 min-h-25p mb-6">
    <section>
      <div class="hero">
        <div class="hero-body">
          <div class="content px-12-lg px-24-xl">
            <h1 class="title">
              English-Language Car, Motorcycle, and Scooter Services in Taiwan
            </h1>
          </div>
        </div>
      </div>
    </section>
  </div>
  <section class="mb-12">
    <div class="content px-12-lg px-24-xl px-2-sm px-2">
      <p>
        Interested in owning, or already own, a car, motorcycle, or scooter in Taiwan, and daunted by the labyrinthian Chinese-language bureaucracy? Let our bilingual English- and Mandarin-speaking staff help out! Whatever your motor vehicle related needs are in Taiwan, we can help.
      </p>
    </div>
  </section>
  <div class="row px-6-lg px-12-xl py-1">
    { serviceEntries.map(service => (
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 mb-4">
      <div class="card h-100p u-flex u-flex-column p-2">
        <div class="card__header">
          <h3 class="uk-card-title">
            {service.data.title}
          </h3>
        </div>
        <div class="content">
          <p>
            {service.data.description}
          </p>
        </div>
        <div class="card__action-bar">
          <a href={'services/' + service.slug} class="uk-button uk-button-text">Read more</a>
        </div>
      </div>
    </div>
    ))}
  </div>
  <footer class="footer text-white">
    <div class="content footer__title">
      {contactInfo.body}
    </div>
    <div class="content">
      <div class="divider"></div>
      <div class="row">
        <div class="col-12">
          <ul class="no-bullets">
            <a href={contactInfo.data.facebook}>
              <li class="footer__list-item">
                Facebook
              </li>
            </a>
          </ul>
        </div>
      </div>
    </div>
  </footer>

</Layout>
